<Window x:Class="_20190921_trim_crop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20190921_trim_crop"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="450">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="150"/>
    </Grid.ColumnDefinitions>
    <Canvas Name="MyCanvas" UseLayoutRounding="True">
      <Image Name="MyImage" Stretch="None"/>      
    </Canvas>
    <StackPanel Grid.Column="1" Name="MyStakPanel">
      <Button x:Name="MyButton1" Content="button1"/>
      <Button x:Name="MyButton2" Content="button2"/>
      <Button x:Name="MyButton3" Content="button3"/>
    </StackPanel>
  </Grid>
</Window>
