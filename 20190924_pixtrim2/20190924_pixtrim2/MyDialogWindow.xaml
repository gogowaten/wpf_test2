<Window x:Class="_20190924_pixtrim2.MyDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20190924_pixtrim2"
        mc:Ignorable="d"
        Title="MyDialogWindow" Height="200" Width="300" SizeToContent="WidthAndHeight">
    <Grid>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
    <TextBox Name="MyTextBox" Margin="10,20,10,10"/>
    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
      <Button Content="Cancel" Name="ButtonCancel" Margin="10" Width="100" Click="ButtonCancel_Click_1"/>
      <Button Content="Ok" Name="ButtonOk" Margin="10" Width="100" Click="ButtonOk_Click"/>
    </StackPanel>
    </StackPanel>
  </Grid>
</Window>
