<Window x:Class="_20190921_trimSave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20190921_trimSave"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="150"/>
    </Grid.ColumnDefinitions>
    <Canvas Name="MyCanvas" UseLayoutRounding="True">
      <Image Name="MyImage" Stretch="None"/>
      <Rectangle Name="MyRectangle" Width="80" Height="50" Canvas.Left="32" Canvas.Top="42" Fill="Orange" Opacity="0.5"/>
    </Canvas>
    <StackPanel Grid.Column="1" Name="MyStakPanel">
      <Button x:Name="MyButton1" Content="button1"/>
      <Button x:Name="MyButton2" Content="button2"/>
      <Button x:Name="MyButton3" Content="button3"/>
    </StackPanel>
  </Grid>
</Window>
